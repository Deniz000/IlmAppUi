<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <Button
        android:id="@+id/btn_resource_icon"
        style="?android:attr/buttonBarButtonStyle"
        android:text=""
        android:background="@drawable/icon_button_pencil"
        android:drawableStart="@drawable/pencil_icon"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:layout_gravity="center_vertical" />

    <Button
        android:id="@+id/btn_resource_name"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/button_white"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:text="@string/resources"
        android:elevation="2dp"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:fontFamily="@font/kodchasan_regular"
        android:textColor="@color/orange"
        android:textSize="@dimen/size_md"
        android:drawableEnd="@drawable/go_icon"
        tools:ignore="RtlHardcoded,SpUsage" />
</LinearLayout>
